---
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../i18n/utils";

import LanguagePicker from "../components/LanguagePicker.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);
---

<nav
  class="bg-white dark:bg-gray-900 fixed w-full z-20 top-0 start-0 border-b border-gray-200 dark:border-gray-600"
>
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a
      href={translatePath("/")}
      class="flex items-center space-x-3 rtl:space-x-reverse"
    >
      <span
        class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
        >{t("site.title")}</span
      >
    </a>
    <div class="flex md:order-2 space-x-3 md:space-x-0 rtl:space-x-reverse">
      <div class="m-auto">
        <LanguagePicker />
      </div>
      <button
        data-collapse-toggle="navbar-sticky"
        type="button"
        class="toggle z-50 inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600"
        aria-controls="navbar-sticky"
        aria-expanded="false"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="w-5 h-5"
          aria-hidden="true"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 17 14"
        >
          <path
            stroke="currentColor"
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M1 1h15M1 7h15M1 13h15"></path>
        </svg>
      </button>
    </div>
    <div
      id="navbar-sticky"
      class="md:flex md:w-auto md:order-1 hidden md:relative md:mt-0 md:mr-0 md:ml-0 absolute w-full"
    >
      <ul
        class="flex flex-col p-4 md:p-0 mt-[265px] max-[306px]:mt-[295px] mr-[16px] ml-[135px] max-[320px]:ml-0 md:mr-0 md:ml-0 font-medium border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700"
      >
        <li>
          <a
            href={translatePath("/")}
            class="block py-2 px-3 text-white bg-blue-700 rounded md:bg-transparent md:text-blue-700 md:p-0 md:dark:text-blue-500"
          >
            {t("nav.home")}
          </a>
        </li>
        <li>
          <a
            href={translatePath("/")}
            class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
          >
            {t("nav.about")}
          </a>
        </li>
        <li>
          <a
            href={translatePath("/")}
            class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
          >
            {t("nav.projects")}
          </a>
        </li>
        <li>
          <a
            href={translatePath("/")}
            class="block py-2 px-3 text-gray-900 rounded hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:p-0 md:dark:hover:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700"
          >
            {t("nav.contact")}
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  let isMenuOpen = false;

  const button = document.querySelector(".toggle");
  const menu = document.getElementById("navbar-sticky");

  if (button && menu) {
    button.addEventListener("click", () => {
      isMenuOpen = !isMenuOpen;

      menu.classList.toggle("hidden", !isMenuOpen);
      menu.classList.toggle("block", isMenuOpen);

      button.setAttribute("aria-expanded", isMenuOpen ? "true" : "false");
    });
  }
</script>
